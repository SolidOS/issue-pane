{
  "name": "issue-pane",
  "version": "2.5.0",
  "description": "Solid-compatible Panes: issue editor",
  "main": "./issuePane.js",
  "scripts": {
    "build": "echo nothing to build",
    "lint": "eslint '*.js'",
